{% extends 'base.html.twig' %}

{% block title %} Liste des Articles {% endblock %}

{% block body %}
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.nom }}</td>
                        <td>{{ article.prix }}</td>
                        <td>
                            <a href="/article/{{ article.id }}" class="btn btn-dark">DÃ©tails</a>
                            <a href="/article/edit/{{ article.id }}" class="btn btn-dark">Modifier</a>
                            <button onclick="deleteArticle({{ article.id }})" class="btn btn-danger">Supprimer</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun articles</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script>
        async function deleteArticle(id) {
            const response = await fetch(`/article/delete/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            if (response.ok) {
                const data = await response.json();
                alert(data.message); // Notify success
                // Refresh the page to show the updated list of articles
                location.reload();
            } else {
                const errorData = await response.json();
                alert(errorData.message); // Notify error
            }
        }
    </script>
{% endblock %}
